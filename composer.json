{
    "name": "fastd/fastd-module",
    "type": "library",
    "description": "The fastd module framework.",
    "license": "MIT",
    "minimum-stability": "dev",
    "keywords": [
        "module develop framework."
    ],
    "authors": [
        {
            "name": "janhuang",
            "email": "bboyjanhuang@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "fastd/framework": "~0.1.0, 0.1.*"
    },
    "autoload": {
        "psr-4": {
            "": "src/",
            "Module\\": "module"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-update-cmd": "Module\\Module::init",
        "post-install-cmd": "Module\\Module::init",
        "post-create-project-cmd": "Module\\Module::init"
    }
}
